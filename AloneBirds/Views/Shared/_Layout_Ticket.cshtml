@model IEnumerable<AloneBirds.Models.Ticket>
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css_Ticket/style.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    @*<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">*@
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-image: url(/Content/images/abc.jpg)" >
    <div style="background-color:rgba(0,0,0,.5); height:80px" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/images/CGV_logo.svg.png" width="120" height="60" />
            </div>
            <div class="navbar-collapse collapse">
                <ul style="padding-top:8px" class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Base")</li>
                    <li>@Html.ActionLink("Movie Store", "Index_Watching", "Watchings")</li>
                    <li>@Html.ActionLink("Search", "Index_Watching", "Watchings")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div style="padding-left:40px;margin-top:20px" id="formGhe" action="">
        <div class="chonGhe">
            <div class="screen">Screen</div>
            <ul class="danhsachghe">
                @RenderBody()
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 style="color:deeppink;font-weight:bold;font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;text-align:left;font-size:20px;margin:0" class="modal-title" id="exampleModalLabel">Thông Báo</h5>
                            </div>
                            <div style="color:hotpink;font-size:20px; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif" class="modal-body text-center">
                                <img style="margin-bottom:10px" src="~/Content/images/ảnh-icon-buồn.jpg" width="550" height="350" /><br />
                                VÉ ĐÃ ĐƯỢC MUA!
                            </div>
                            <div class="modal-footer">
                                <button style="box-shadow:inherit inherit;background-color:pink;color:white" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </ul>
        </div>
        @foreach (var item in Model)
        {
            <div class="gioiThieuPhim">
                <div id="rectangle">
                    <img style="width:120px" src="@item.Watching.Movie.Poster" alt="">
                    <div class="ttphim">
                        <h2>@item.Watching.Movie.Name</h2>
                        <p>@item.Watching.ShowTime.Room.RoomName</p>
                        <h3>@item.Watching.ShowTime.DateTime</h3>
                    </div>
                </div>
                <br>
                <div style="height:120px" class="tongtien">
                    <p>Bắp:  <input type="checkbox" style="height:14px; width:14px;margin-left:55px"/></p>
                    <p> Nước Ngọt: <input type="checkbox" style="height:15px; width:15px;margin-left:10px" /></p>
                    @*<p>Vé:@item.Seat</p>*@
                    <p>Giá Vé: @item.Watching.ShowTime.Fare VNĐ</p>
                </div>
                <div>
                    <button class="btnMua">Mua Vé</button>
                </div>
            </div>
            break;
        }

    </div>
    <div style="padding-left:290px" class="infGhe">
        <div style="padding-right:20px"> <button class="square-1">...</button><span>Ghế Chưa Đặt</span></div>
        <div style="padding-right:20px"><button class="square-2"></button><p>Ghế Đang Chọn</p></div>
        <div style="padding-right:20px"><button class="square-3"></button><p>Ghế Đã Đặt</p></div>
    </div>

    <br>

    <footer>
        <div class="container">
            <!--Bắt Đầu Nội Dung Giới Thiệu-->
            <div class="noi-dung about">
                <h2>Về Chúng Tôi</h2>
                <p>Nập Chình Wed</p>
                <ul class="social-icon">
                    <li><a href=""><i class="fa fa-facebook"></i></a></li>
                    <li><a href=""><i class="fa fa-twitter"></i></a></li>
                    <li><a href=""><i class="fa fa-instagram"></i></a></li>
                    <li><a href=""><i class="fa fa-youtube"></i></a></li>
                </ul>
            </div>
            <!--Kết Thúc Nội Dung Giới Thiệu-->
            <!--Bắt Đầu Nội Dung Đường Dẫn-->
            <div class="noi-dung links">
                <h2>Đường Dẫn</h2>
                <ul>
                    <li><a href="index.html">Trang Chủ</a></li>
                    <li><a href="#">Về Chúng Tôi</a></li>
                    <li><a href="#">Thông Tin Liên Lạc</a></li>
                    <li><a href="#">Dịch Vụ</a></li>
                    <li><a href="#">Điều Kiện Chính Sách</a></li>
                </ul>
            </div>
            <!--Kết Thúc Nội Dung Đường Dẫn-->
            <!--Bắt Đâu Nội Dung Liên Hệ-->
            <div class="noi-dung contact">
                <h2>Thông Tin Liên Hệ</h2>
                <ul class="info">
                    <li>
                        <span><i class="fa fa-map-marker"></i></span>
                        <span>
                            Hutech<br />
                            Quận 9, Thành Phố Hồ Chí Minh<br />
                            Việt Nam
                        </span>
                    </li>
                    <li>
                        <span><i class="fa fa-phone"></i></span>
                        <p>
                            <a href="#">+84 123 456 789</a>
                            <br />
                            <a href="#">+84 987 654 321</a>
                        </p>
                    </li>
                    <li>
                        <span><i class="fa fa-envelope"></i></span>
                        <p><a href="#">diachiemail@gmail.com</a></p>
                    </li>
                    <li>
                        <form class="form">
                            <input type="email" class="form__field" placeholder="Đăng Ký Email" />
                            <button type="button" class="btn btn--primary  uppercase">Gửi</button>
                        </form>
                    </li>
                </ul>
            </div>
            <!--Kết Thúc Nội Dung Liên Hệ-->
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </footer>
</body>
</html>