<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div  style="background-color:transparent;border:none!important" class="navbar navbar-inverse navbar-fixed-top">
        <div  style="background-color: transparent; padding: 4px 0 " class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/images/CGV_logo.svg.png" width="100" height="50" />
            </div>
            <div class="navbar-collapse collapse">
                <ul style="padding-top:8px;font-size:20px" class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Base")</li>
                    <li>@Html.ActionLink("Movie Store", "Index_Watching", "Watchings")</li>
                    <li>@Html.ActionLink("Search", "Index_Watching", "Watchings")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
