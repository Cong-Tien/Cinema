@model AloneBirds.ViewModel.WatchingUpcommingViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-radius:5px;
        }
    </style>
    
</head>

<h2>List Watchings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:white" >
    <tr style="border: 1px solid pink ;margin-bottom:5px">
        <th style="border: 2px solid pink;">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="border: 2px solid pink">
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th style="border: 2px solid pink">
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.UpcommingMovies)
    {
<tr style="border: 1px solid pink">
    <td style="border: 2px solid pink">
        @Html.DisplayFor(modelItem => item.Movie.Name)
    </td>
    <td style="border: 2px solid pink">
        @Html.DisplayFor(modelItem => item.ShowTime.DateTime)
    </td>
    <td style="border: 2px solid pink"> 
        @if (item.sold == 0)
        {
            <span style="color:hotpink"><i>Chưa tạo vé</i></span>
        }
        @if (item.sold == 1)
        {
            <span>Đã tạo vé</span>
        }

    </td>
    <td style="border: 2px solid pink;background-color:mistyrose">
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
        @Html.ActionLink("Create Ticket", "Create_Ticket", new { id = item.Id })
    </td>
</tr>
    }

</table>
