@model IEnumerable<AloneBirds.Models.Ticket>
@{
    Layout = "~/Views/Shared/_Layout_Ticket.cshtml";
}

@foreach (var item in Model)
{
    if (@item.State == 0)
    {
        <form class="form-ticket" action="/Ticket/Buy/@item.Id" method="post">
            <button type="submit"  class="square">@item.Seat</button>
        </form>
        @*<button id="@item.Seat" onclick="abc()" class=" js-toggle-attendance square">@item.Seat</button>*@

    }
    if (item.State == 1)
    {
        <button type="button" data-toggle="modal" data-target="#exampleModal" style="background-color:lightpink" class="square">@item.Seat</button>
    }

    if (item.State == 2)
    {
        <button type="button" data-toggle="modal" data-target="#exampleModal" style="background-color: #21d1fd" class="square">@item.Seat</button>
    }

}
