@model IEnumerable<AloneBirds.Models.Ticket>
@{
    ViewBag.Title = "MyTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        span {
            color: hotpink;
            font-style: italic;
            font-size: 17px;
        }

        h5 {
            font-size: 18px;
            color: black;
        }

        body {
            background-image: url(/Content/images/JIbOgQ.jpg) !important;
        }
    </style>
</head>



<body>
    <div style="color:pink">

        <h2 style="margin:40px 0;font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;text-align:center; font-weight:bold; color:hotpink">  <img style="border-radius:15px; margin-left:30px" width="200" height="200" src="~/Content/images/2zTi.jpg" /> <p style="background-color:wheat;display:inline;padding:10px 10px;border-radius:10px">List My Tickets</p></h2>

        <div style="display: flex; flex-wrap: wrap; text-align:center;justify-content:center;align-items:center ;font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
            @foreach (var item in Model)
            {
                <div class="animate__animated animate__flip" style="width:30% ;color:white;border:5px solid wheat;box-shadow:15px 20px lightpink; border-radius:20px; margin:30px 10px;background-color:wheat">
                    <img style="border-top-left-radius:20px; border-top-right-radius:20px" src="@item.Watching.Movie.Poster" width="100%" height="320" />
                    <div style="margin:20px 0; color:white;">
                        <h5>Name: <span>@item.Clients.Email</span></h5>
                        <h5>Movie: <span>@item.Watching.Movie.Name</span></h5>
                        <h5>Price: <span>@item.Price</span></h5>
                        <h5>Show Times: <span>@item.Watching.ShowTime.DateTime</span></h5>
                        <h5>Seat: <span>@item.Seat</span></h5>
                    </div>
                </div>
            }
        </div>

    </div>
</body>

